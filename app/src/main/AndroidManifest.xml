<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marcoslopez7.pocketlawyer" >

    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_action"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".View.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.ListaArticulosActivity"
            android:label="@string/title_activity_lista_articulos" >
        </activity>
        <activity
            android:name=".View.ArticuloActivity"
            android:label="@string/title_activity_articulo" >
        </activity>
    </application>

</manifest>
